@page "/"

<PageTitle>Pickle Me</PageTitle>

<div class="container">
    <EditForm Model="Model" FormName="pickle-me" OnSubmit="Submit">
        <div class="d-flex flex-row justify-content-center">
            <div class="m-3">
                <label for="cupsInput" class="form-label">Cups of Brine</label>
                <InputNumber id="cupsInput" @bind-Value="Model!.Cups" class="form-control"
                             style="width: 100px;"></InputNumber>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center">
            <button class="btn btn-primary mt-2" type="submit">Submit</button>
        </div>
    </EditForm>
    <div class="mt-2">
        @if (_submitted)
        {
            <p>Water: @Model?.Water (cups)</p>
            <p>Vinegar: @Model?.Vinegar (cups)</p>
            <p>Sugar: @Model?.Sugar (cups)</p>
            <p>Salt: @Model?.Salt (tbsp)</p>
        }
    </div>

</div>

@code {

    private PickleMeModel? Model { get; set; }
    private bool _submitted;

    protected override void OnInitialized()
    {
        Model ??= new PickleMeModel();
    }

    private void Submit()
    {
        Model?.Calculate();
        _submitted = true;
    }

}
